{
  "manifest_version": 3,
  "name": "YouTube Shorts AutoPlay",
  "version": "1.0",
  "description": "Auto avan√ßa Shorts quando termina",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/shorts/*", "https://youtube.com/shorts/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "YouTube Shorts AutoPlay",
    "default_popup": "popup.html"
  }
}
